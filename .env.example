# Theophysics Ingest Engine Configuration
# Copy this file to .env and fill in your values

# ==========================================
# PostgreSQL Database
# ==========================================
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=theophysics
PG_USER=postgres
PG_PASSWORD=

# ==========================================
# Ingest Settings
# ==========================================
INGEST_BATCH_SIZE=100
LOG_LEVEL=INFO

# Excel
EXCEL_MAX_ROWS=100000
EXCEL_DETECT_HEADERS=true

# HTML
HTML_PARSER=lxml
HTML_ENCODING=auto

# Markdown
MD_PARSE_DEFINITIONS=true
MD_EXTRACT_EQUATIONS=true

# ==========================================
# Obsidian Vault
# ==========================================
OBSIDIAN_VAULT_PATH=
VAULT_IGNORE_FOLDERS=.obsidian,.git,.trash,node_modules
DEFINITION_FOLDER=Glossary
